{
  "compilerOptions": {
    "baseUrl": "./",
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2015", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./target",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES5"
  },

  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "./node_modules/hornet-js-logger/index.d.ts",
    "./node_modules/hornet-js-test/index.d.ts"
  ],
  "exclude": [
    "istanbul"
  ]
}
