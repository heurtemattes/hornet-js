{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./target",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES5"
  },
  "include": [
    "src/**/*.ts*",
    "index.ts",
    "test/**/*.ts*"
  ],
  "exclude": [
    "istanbul",
    "node_modules"
  ]
}
