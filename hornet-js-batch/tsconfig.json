{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./target",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES5",
    "rootDir": "./"
  },
  "include": [
    "src/**/*.ts*",
    "test/**/*.ts*",
    "index.ts",
    "./node_modules/hornet-js-core/index.d.ts",
    "./node_modules/hornet-js-logger/index.d.ts",
    "./node_modules/hornet-js-utils/index.d.ts",
  ],
  "exclude": [
    "istanbul",
    "./index.d.ts"
  ]
}
